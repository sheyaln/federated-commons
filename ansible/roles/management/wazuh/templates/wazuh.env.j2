# Wazuh Environment Configuration
WAZUH_DOMAIN="{{ wazuh_domain | default(management_domain) }}"
WAZUH_INDEXER_PASSWORD="{{ wazuh_indexer_password }}"
WAZUH_API_PASSWORD="{{ wazuh_api_password }}"
WAZUH_DASHBOARD_PASSWORD="{{ wazuh_dashboard_password }}"

# SMTP Configuration (for alerts)
SMTP_HOST={{ smtp_host | default('smtp.tem.scaleway.com') }}
SMTP_PORT={{ smtp_port | default('465') }}
SMTP_USER={{ smtp_username }}
SMTP_PASSWORD={{ smtp_password }}

# Admin email for alerts
ADMIN_EMAIL={{ admin_email | default('infra@' + tools_domain) }}
