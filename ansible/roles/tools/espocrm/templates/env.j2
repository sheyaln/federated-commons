# EspoCRM Environment Variables

# Database Configuration (PostgreSQL)
ESPO_DB_HOST={{ ESPO_DB_HOST }}
ESPO_DB_PORT={{ ESPO_DB_PORT }}
ESPO_DB_NAME={{ ESPO_DB_NAME }}
ESPO_DB_USER={{ ESPO_DB_USER }}
ESPO_DB_PASS={{ ESPO_DB_PASS | replace('$', '$$') }}

# EspoCRM Admin Configuration
ESPO_ADMIN_USER={{ ESPO_ADMIN_USER }}
ESPO_ADMIN_PASSWORD={{ ESPO_ADMIN_PASSWORD | replace('$', '$$') }}
