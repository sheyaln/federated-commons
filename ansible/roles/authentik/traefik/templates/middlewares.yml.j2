# Dynamic Middleware Configuration for Traefik-Authentik
# Based on Authentik's official documentation: https://docs.goauthentik.io/docs/providers/proxy/server_traefik

http:
  middlewares:
    # Security Headers (Authentik recommended)
    security-headers:
      headers:
        frameDeny: true
        sslRedirect: true
        browserXssFilter: true
        contentTypeNosniff: true
        forceSTSHeader: true
        stsIncludeSubdomains: true
        stsPreload: true
        stsSeconds: 31536000
        customRequestHeaders:
          X-Forwarded-Proto: https
          X-Forwarded-Port: "443"
        customResponseHeaders:
          X-Robots-Tag: "noindex,nofollow,nosnippet,noarchive"
          X-Content-Type-Options: nosniff
          Referrer-Policy: same-origin
          Permissions-Policy: "camera=(), microphone=(), geolocation=(), payment=()"
          Content-Security-Policy: "default-src 'self'; script-src 'self' 'unsafe-inline' https://appleid.cdn-apple.com https://appleid.apple.com https://js-cdn.music.apple.com; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data: https://appleid.cdn-apple.com https://appleid.apple.com https://js-cdn.music.apple.com; connect-src 'self' https://appleid.cdn-apple.com https://appleid.apple.com https://js-cdn.music.apple.com; frame-ancestors 'none'"

    # Rate Limiting (Authentik recommended)
    rate-limit:
      rateLimit:
        average: 100
        period: 1m
        burst: 50

    # Authentik Forward Auth Middleware (Official Configuration)
    # Based on: https://docs.goauthentik.io/docs/providers/proxy/server_traefik
    authentik:
      forwardAuth:
        address: "http://authentik-server:9000/outpost.goauthentik.io/auth/traefik"
        trustForwardHeader: true
        authResponseHeaders:
          - X-authentik-username
          - X-authentik-groups
          - X-authentik-entitlements
          - X-authentik-email
          - X-authentik-name
          - X-authentik-uid
          - X-authentik-jwt
          - X-authentik-meta-jwks
          - X-authentik-meta-outpost
          - X-authentik-meta-provider
          - X-authentik-meta-app
          - X-authentik-meta-version

  # Service-level configuration for Authentik auth endpoint
  # Explicit timeouts ensure fail-close behavior on auth service issues
  serversTransports:
    authentik-transport:
      forwardingTimeouts:
        dialTimeout: "5s"
        responseHeaderTimeout: "10s"
        idleConnTimeout: "30s"

# TLS Configuration (Authentik recommended)
tls:
  options:
    modern:
      minVersion: "VersionTLS13"
      cipherSuites: []
    
    intermediate:
      minVersion: "VersionTLS12"
      cipherSuites:
        - "TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256"
        - "TLS_ECDHE_RSA_WITH_AES_128_GCM_SHA256"
        - "TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384"
        - "TLS_ECDHE_RSA_WITH_AES_256_GCM_SHA384"
        - "TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305"
        - "TLS_ECDHE_RSA_WITH_CHACHA20_POLY1305" 