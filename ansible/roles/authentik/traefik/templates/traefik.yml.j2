# Traefik Static Configuration for Authentik
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

global:
  checkNewVersion: false
  sendAnonymousUsage: false

log:
  level: {{ traefik_log_level }}
  filePath: /logs/traefik.log

accessLog:
  filePath: /logs/access.log
  format: json
  bufferingSize: 100

api:
  dashboard: {{ 'true' if traefik_enable_dashboard else 'false' }}
  insecure: false

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entrypoint:
          to: websecure
          scheme: https
  
  websecure:
    address: ":443"
    http:
      tls:
        options: modern@file
        certResolver: le

providers:
  docker:
    exposedByDefault: false
    network: {{ traefik_network_name }}
    endpoint: tcp://docker-socket-proxy:2375
    
  file:
    directory: /config/dynamic
    watch: true

certificatesResolvers:
  le:
    acme:
      email: {{ traefik_acme_email }}
      storage: /data/acme.json
      httpChallenge:
        entryPoint: web

serversTransport:
  insecureSkipVerify: false
  maxIdleConnsPerHost: 50
  forwardingTimeouts:
    dialTimeout: 30s
    responseHeaderTimeout: 60s
    idleConnTimeout: 90s 