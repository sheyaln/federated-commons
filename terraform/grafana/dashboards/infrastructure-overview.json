{
    "id": null,
    "uid": "infrastructure-overview",
    "title": "Infrastructure Overview",
    "tags": ["infrastructure", "overview", "node-exporter", "cadvisor"],
    "style": "dark",
    "timezone": "browser",
    "editable": true,
    "graphTooltip": 1,
    "time": {
        "from": "now-1h",
        "to": "now"
    },
    "refresh": "30s",
    "templating": {
        "list": [
            {
                "name": "server",
                "type": "query",
                "datasource": {
                    "type": "prometheus",
                    "uid": "${prometheus_uid}"
                },
                "query": "label_values(node_uname_info, server)",
                "refresh": 1,
                "includeAll": true,
                "multi": true,
                "current": {
                    "selected": true,
                    "text": "All",
                    "value": "$__all"
                }
            }
        ]
    },
    "panels": [
        {
            "id": 1,
            "title": "Server Status",
            "type": "stat",
            "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "sum(up{job=~\"node-.*\"})",
                    "legendFormat": "Servers Up",
                    "refId": "A"
                },
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "sum(up{job=~\"traefik-.*\"})",
                    "legendFormat": "Traefik Instances",
                    "refId": "B"
                },
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "sum(up{job=~\"cadvisor-.*\"})",
                    "legendFormat": "CAdvisor Instances",
                    "refId": "C"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "mappings": [],
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "red", "value": null},
                            {"color": "yellow", "value": 1},
                            {"color": "green", "value": 3}
                        ]
                    },
                    "color": {"mode": "thresholds"}
                }
            },
            "options": {
                "colorMode": "value",
                "graphMode": "none",
                "justifyMode": "auto",
                "orientation": "horizontal",
                "reduceOptions": {
                    "calcs": ["lastNotNull"],
                    "fields": "",
                    "values": false
                }
            }
        },
        {
            "id": 2,
            "title": "CPU Usage by Server",
            "type": "timeseries",
            "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "100 - (avg by(server) (rate(node_cpu_seconds_total{mode=\"idle\", server=~\"$server\"}[5m])) * 100)",
                    "legendFormat": "{{ server }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "green", "value": null},
                            {"color": "yellow", "value": 70},
                            {"color": "red", "value": 90}
                        ]
                    }
                }
            }
        },
        {
            "id": 3,
            "title": "Memory Usage by Server",
            "type": "timeseries",
            "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "(1 - (node_memory_MemAvailable_bytes{server=~\"$server\"} / node_memory_MemTotal_bytes{server=~\"$server\"})) * 100",
                    "legendFormat": "{{ server }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "green", "value": null},
                            {"color": "yellow", "value": 70},
                            {"color": "red", "value": 90}
                        ]
                    }
                }
            }
        },
        {
            "id": 4,
            "title": "Load Average (1m) by Server",
            "type": "timeseries",
            "gridPos": {"h": 6, "w": 12, "x": 0, "y": 12},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "node_load1{server=~\"$server\"}",
                    "legendFormat": "{{ server }} - 1m",
                    "refId": "A"
                },
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "node_load5{server=~\"$server\"}",
                    "legendFormat": "{{ server }} - 5m",
                    "refId": "B"
                },
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "node_load15{server=~\"$server\"}",
                    "legendFormat": "{{ server }} - 15m",
                    "refId": "C"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "green", "value": null},
                            {"color": "yellow", "value": 2},
                            {"color": "red", "value": 4}
                        ]
                    }
                }
            }
        },
        {
            "id": 5,
            "title": "Disk Usage by Server",
            "type": "gauge",
            "gridPos": {"h": 6, "w": 12, "x": 12, "y": 12},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "(1 - (node_filesystem_avail_bytes{server=~\"$server\", mountpoint=\"/\", fstype=~\"ext4|xfs\"} / node_filesystem_size_bytes{server=~\"$server\", mountpoint=\"/\", fstype=~\"ext4|xfs\"})) * 100",
                    "legendFormat": "{{ server }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "green", "value": null},
                            {"color": "yellow", "value": 70},
                            {"color": "red", "value": 85}
                        ]
                    }
                }
            }
        },
        {
            "id": 6,
            "title": "Swap Usage by Server",
            "type": "timeseries",
            "gridPos": {"h": 6, "w": 12, "x": 0, "y": 18},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "((node_memory_SwapTotal_bytes{server=~\"$server\"} - node_memory_SwapFree_bytes{server=~\"$server\"}) / node_memory_SwapTotal_bytes{server=~\"$server\"}) * 100",
                    "legendFormat": "{{ server }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent",
                    "min": 0,
                    "max": 100,
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "green", "value": null},
                            {"color": "yellow", "value": 50},
                            {"color": "red", "value": 80}
                        ]
                    }
                }
            }
        },
        {
            "id": 7,
            "title": "Network Traffic by Server",
            "type": "timeseries",
            "gridPos": {"h": 6, "w": 12, "x": 12, "y": 18},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "sum by(server) (rate(node_network_receive_bytes_total{server=~\"$server\", device!~\"lo|docker.*|br-.*|veth.*\"}[5m]))",
                    "legendFormat": "{{ server }} - Receive",
                    "refId": "A"
                },
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "sum by(server) (rate(node_network_transmit_bytes_total{server=~\"$server\", device!~\"lo|docker.*|br-.*|veth.*\"}[5m]))",
                    "legendFormat": "{{ server }} - Transmit",
                    "refId": "B"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        },
        {
            "id": 8,
            "title": "Disk I/O by Server",
            "type": "timeseries",
            "gridPos": {"h": 6, "w": 12, "x": 0, "y": 24},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "sum by(server) (rate(node_disk_read_bytes_total{server=~\"$server\", device!~\"loop.*\"}[5m]))",
                    "legendFormat": "{{ server }} - Read",
                    "refId": "A"
                },
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "sum by(server) (rate(node_disk_written_bytes_total{server=~\"$server\", device!~\"loop.*\"}[5m]))",
                    "legendFormat": "{{ server }} - Write",
                    "refId": "B"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        },
        {
            "id": 9,
            "title": "System Uptime",
            "type": "stat",
            "gridPos": {"h": 6, "w": 12, "x": 12, "y": 24},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "time() - node_boot_time_seconds{server=~\"$server\"}",
                    "legendFormat": "{{ server }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "s",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "yellow", "value": null},
                            {"color": "green", "value": 86400}
                        ]
                    },
                    "color": {"mode": "thresholds"}
                }
            },
            "options": {
                "colorMode": "value",
                "graphMode": "none",
                "orientation": "horizontal",
                "reduceOptions": {
                    "calcs": ["lastNotNull"],
                    "fields": "",
                    "values": false
                }
            }
        },
        {
            "id": 10,
            "title": "Container CPU Usage (Top 10)",
            "type": "timeseries",
            "gridPos": {"h": 8, "w": 12, "x": 0, "y": 30},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "topk(10, sum by(name, server) (rate(container_cpu_usage_seconds_total{name!=\"\", server=~\"$server\"}[5m])) * 100)",
                    "legendFormat": "{{ server }}/{{ name }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "percent"
                }
            }
        },
        {
            "id": 11,
            "title": "Container Memory Usage (Top 10)",
            "type": "timeseries",
            "gridPos": {"h": 8, "w": 12, "x": 12, "y": 30},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "topk(10, sum by(name, server) (container_memory_usage_bytes{name!=\"\", server=~\"$server\"}))",
                    "legendFormat": "{{ server }}/{{ name }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "bytes"
                }
            }
        },
        {
            "id": 12,
            "title": "Container Network I/O (Top 10)",
            "type": "timeseries",
            "gridPos": {"h": 8, "w": 12, "x": 0, "y": 38},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "topk(10, sum by(name, server) (rate(container_network_receive_bytes_total{name!=\"\", server=~\"$server\"}[5m])))",
                    "legendFormat": "{{ server }}/{{ name }} - RX",
                    "refId": "A"
                },
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "topk(10, sum by(name, server) (rate(container_network_transmit_bytes_total{name!=\"\", server=~\"$server\"}[5m])))",
                    "legendFormat": "{{ server }}/{{ name }} - TX",
                    "refId": "B"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "Bps"
                }
            }
        },
        {
            "id": 13,
            "title": "Running Containers by Server",
            "type": "stat",
            "gridPos": {"h": 4, "w": 12, "x": 12, "y": 38},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "count by(server) (container_start_time_seconds{name!=\"\", server=~\"$server\"})",
                    "legendFormat": "{{ server }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "green", "value": null}
                        ]
                    },
                    "color": {"mode": "thresholds"}
                }
            },
            "options": {
                "colorMode": "value",
                "graphMode": "area",
                "justifyMode": "auto",
                "orientation": "horizontal"
            }
        },
        {
            "id": 14,
            "title": "File Descriptors Used",
            "type": "timeseries",
            "gridPos": {"h": 4, "w": 12, "x": 12, "y": 42},
            "targets": [
                {
                    "datasource": {"type": "prometheus", "uid": "${prometheus_uid}"},
                    "expr": "node_filefd_allocated{server=~\"$server\"}",
                    "legendFormat": "{{ server }}",
                    "refId": "A"
                }
            ],
            "fieldConfig": {
                "defaults": {
                    "unit": "short",
                    "thresholds": {
                        "mode": "absolute",
                        "steps": [
                            {"color": "green", "value": null},
                            {"color": "yellow", "value": 50000},
                            {"color": "red", "value": 80000}
                        ]
                    }
                }
            }
        }
    ]
}
