# Federated Commons - Grafana Terraform Configuration
# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to version control

#############################
# Grafana Configuration
#############################
# Your Grafana instance URL
grafana_url = "https://grafana.example.cc"

# Authentication: "username:password" or use API key
# For API key: create at Grafana > Administration > Service accounts
grafana_auth = "admin:your-secure-password"

#############################
# Environment Configuration
#############################
# Options: "production", "staging"
environment = "production"

#############################
# Datasource URLs
#############################
# These are internal Docker network URLs (default values work for standard setup)
prometheus_url   = "http://prometheus:9090"
loki_url         = "http://loki:3100"
alertmanager_url = "http://alertmanager:9093"

# For staging environment:
# grafana_url = "https://grafana.example.com"
# environment = "staging"
